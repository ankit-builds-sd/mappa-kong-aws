{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "rootDir": "./src/",
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "swc": true
  },
  "exclude": ["src/code/quantities/quantities_structure.json"]
}
